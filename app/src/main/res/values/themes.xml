<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyPokemonApp" parent="Theme.AppCompat.Light">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="Theme.MyPokemonApp.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="PokemonTab" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/color_pallete_1</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>
</resources>
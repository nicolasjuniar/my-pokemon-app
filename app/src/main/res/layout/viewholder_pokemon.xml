<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/bg_rounded"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/pokemon_sprite"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/color_pallete_2" />

    <TextView
        android:id="@+id/tv_pokemon_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/pokemon_sprite"
        app:layout_constraintTop_toTopOf="@id/pokemon_sprite"
        tools:text="#001" />

    <TextView
        android:id="@+id/tv_pokemon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/color_pallete_2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/pokemon_sprite"
        app:layout_constraintTop_toBottomOf="@id/tv_pokemon_number"
        tools:text="Bulbasaur" />

    <TextView
        android:id="@+id/tv_pokemon_type_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_grass"
        android:paddingStart="6dp"
        android:paddingTop="2dp"
        android:paddingEnd="6dp"
        android:paddingBottom="2dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/pokemon_sprite"
        app:layout_constraintTop_toBottomOf="@id/tv_pokemon_name"
        tools:text="Grass" />

    <TextView
        android:id="@+id/tv_pokemon_type_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/bg_poison"
        android:paddingStart="6dp"
        android:paddingTop="2dp"
        android:paddingEnd="6dp"
        android:paddingBottom="2dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/tv_pokemon_type_1"
        app:layout_constraintTop_toTopOf="@id/tv_pokemon_type_1"
        tools:text="Poison" />

</androidx.constraintlayout.widget.ConstraintLayout>